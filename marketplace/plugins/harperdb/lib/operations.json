{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/operations.schema.json",
  "title": "HarperDB datasource",
  "description": "A schema defining HarperDB datasource",
  "type": "database",
  "defaults": {},
  "properties": {
    "mode": {
      "label": "",
      "key": "mode",
      "type": "dropdown-component-flip",
      "description": "Single select dropdown for mode",
      "list": [
        {
          "name": "SQL mode",
          "value": "sql"
        },
        {
          "name": "NoSQL mode",
          "value": "nosql"
        }
      ]
    },
    "sql": {
      "sql_query": {
        "key": "sql_query",
        "type": "codehinter",
        "description": "Enter query",
        "height": "150px"
      }
    },
    "nosql": {
      "operation": {
        "label": "Operation",
        "key": "operation",
        "type": "dropdown-component-flip",
        "desription": "Single select dropdown for operation",
        "list": [
          {
            "name": "Descibe all",
            "value": "describe_all"
          },
          {
            "name": "Insert",
            "value": "insert"
          }
        ]
      },
      "insert": {
        "schema": {
          "label": "Schema",
          "key": "schema",
          "type": "text",
          "description": "Enter schema"
        },
        "table": {
          "label": "Table",
          "key": "table",
          "type": "text",
          "description": "Enter table name"
        },
        "records": {
          "label": "records",
          "key": "records",
          "type": "codehinter",
          "mode": "javascript",
          "description": "Enter records to insert",
          "placeholder": "[{id: 1, name: 'Ganesh', age: 26, country: 'India', hobby: 'Badminton'}]"
        }
      }
    }
  }
}